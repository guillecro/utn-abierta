{% endblock %}

{% block javascripts %}
   <script type="text/javascript" src="{{asset('js/slick.min.js')}}"></script>
   <script type="text/javascript">
      $( document ).ready( function( ) {
         $( '.galeria' ).slick({
            dots: false,
            arrows: false,
            lazyLoad: 'ondemand',
            centerMode: true,
            centerPadding: '40px',
            responsive: true
         });
         $( '.imagen-next' ).click( function( ) {
            $( ".galeria" ).slick( 'slickNext' );
         });
         $( '.imagen-prev' ).click( function( ) {
            $( ".galeria" ).slick( 'slickPrev' );
         });
      });
   </script>
{% endblock %}
